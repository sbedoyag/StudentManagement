@page
@model StudentManagement.Web.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Estudiantes";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr><th>Nombre</th><th>Correo</th><th>Documento</th></tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Document</td>
            </tr>
        }
    </tbody>
</table>