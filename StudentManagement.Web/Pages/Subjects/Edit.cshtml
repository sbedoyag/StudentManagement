@page
@model StudentManagement.Web.Pages.Subjects.EditModel

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>Materias</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Subject.Code" />

            <div class="form-group">
                <label asp-for="Subject.Code" class="control-label"></label>
                <input asp-for="Subject.Code" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Subject.Name" class="control-label"></label>
                <input asp-for="Subject.Name" class="form-control" />
                <span asp-validation-for="Subject.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Subject.Credits" class="control-label"></label>
                <input asp-for="Subject.Credits" class="form-control" />
                <span asp-validation-for="Subject.Credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
